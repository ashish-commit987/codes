class Solution {
    public int[][] updateMatrix(int[][] mat) {
        int m=mat.length;
        int n=mat[0].length;
        Queue<int[]> q=new LinkedList<>();
        int dist[][]=new int[m][n];
         for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(mat[i][j]==0){
                    dist[i][j]=0;
                    q.add(new int[]{i,j});
                }
                else{
                    dist[i][j]=-1;
                }
            }
         }
         while(!q.isEmpty()){
            int curr[]=q.poll();
            int x=curr[0];
            int y=curr[1];

            int direcX[]={1,-1,0,0};
            int direcY[]={0,0,1,-1};

            for(int d=0;d<4;d++){
                int nx=x+direcX[d];
                int ny=y+direcY[d];

                if(nx>=0 && ny>=0 && nx<m && ny<n && dist[nx][ny]==-1){
                    dist[nx][ny]=dist[x][y]+1;
                    q.add(new int[]{nx,ny});
                }
            }
         }
         return dist;
    }
}
https://leetcode.com/problems/01-matrix/
