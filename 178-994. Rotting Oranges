class Solution {
    public int orangesRotting(int[][] grid) {
        int m=grid.length;
        int n=grid[0].length;
        int dirX[]=new int[]{1,-1,0,0};
        int dirY[]=new int[]{0,0,1,-1};
        Queue<int[]> q=new LinkedList<>();
        int fresh=0;
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(grid[i][j]==1){
                    fresh++;
                }
                else if(grid[i][j]==2){
                    q.add(new int[]{i,j});
                }
            }
        }
        if(fresh==0) return 0;
        int minutes=-1;
        while(!q.isEmpty()){
            int size=q.size();
            
            minutes++;
            for(int i=0;i<size;i++){
                int[] curr=q.poll();
                int x=curr[0];
                int y=curr[1];

                for(int direc=0;direc<4;direc++){
                    int nx=x+dirX[direc];
                    int ny=y+dirY[direc];

                    if(nx>=0 && ny>=0 && nx<m && ny<n && grid[nx][ny]==1){
                        grid[nx][ny]=2;
                        fresh--;
                        q.add(new int[]{nx,ny});
                    }
                }
            }
        }
        return fresh==0?minutes:-1;
    }
}
https://leetcode.com/problems/rotting-oranges/
