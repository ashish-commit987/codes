class Solution {
    public int maxScore(int[] cardPoints, int k) {
        int n=cardPoints.length;
        int sum=0;
        int winSize=n-k;
        int totalSum=0;
        int r=n-1;
        int l=0;
        int min=0;
        int count=0;
        if(n==k){
            for(int i=0;i<n;i++){
                sum+=cardPoints[i];
            }
            
        }
        else{
            for(int i=0;i<n;i++){
                totalSum+=cardPoints[i];
            }
            int currSum=0;
            for(int i=0;i<winSize;i++){
                currSum+=cardPoints[i];
            }
            int minSum=currSum;
            for(int i=winSize;i<n;i++){
                currSum=currSum+cardPoints[i]-cardPoints[i-winSize];
                minSum=Math.min(currSum,minSum);
            }
            sum=totalSum-minSum;
        }
        return sum;
    }
}
https://leetcode.com/problems/maximum-points-you-can-obtain-from-cards/
