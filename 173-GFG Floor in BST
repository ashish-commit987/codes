// User function Template for Java

class Solution {
    public static int floor(Node root, int x) {
        // Code here
        int floor=-1;
        if(root==null) return floor;
        while(root!=null){
            if(root.data==x){
                return root.data;
            }
            else if(root.data<x){
                floor=root.data;
                root=root.right;
            }
            else{
                root=root.left;
            }
        }
        return floor;
    }
}
