/* class Node {
    int data;
    Node left, right;

    Node(int data) {
        this.data = data;
        left = right = null;
    }
} */

class Solution {
    int findCeil(Node root, int x) {
        // code here
        int ceil=-1;
        if(root==null) return ceil;
        while(root!=null){
            if(root.data==x){
                return root.data;
            }
            else if(root.data>x){
                ceil=root.data;
                root=root.left;
            }
            else{
                root=root.right;
            }
        }
        return ceil;
    }
}
